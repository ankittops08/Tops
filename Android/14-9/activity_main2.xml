<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity2">


    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:text="Circket Tournament"
        android:background="@color/purple_200"

        />
    <TextView
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40dp"
        android:layout_below="@+id/i1"
        android:textColor="@color/black"
        android:text="Indian"

        />
    <TextView
        android:id="@+id/t3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40dp"
        android:layout_below="@+id/i2"
        android:textColor="@color/black"
        android:text="Pakistan"

        />
    <TextView
        android:id="@+id/t4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40dp"
        android:layout_below="@id/i3"
        android:textColor="@color/black"
        android:text="Srilanka"

        />
    <TextView
        android:id="@+id/t5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40dp"
        android:layout_below="@id/i4"
        android:textColor="@color/black"
        android:text="hong kong"

        />


    <ImageView
        android:id="@+id/i1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/t1"
        android:layout_centerInParent="true"
        android:src="@drawable/indian"
        android:layout_marginTop="25dp"
        />
   <ImageView
        android:id="@+id/i2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/t2"
        android:layout_centerInParent="true"
        android:src="@drawable/pakistan"
        android:layout_marginTop="25dp"
        />
   <ImageView
        android:id="@+id/i3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/t3"
        android:layout_centerInParent="true"
        android:src="@drawable/srilanka"
        android:layout_marginTop="25dp"

       />
   <ImageView
        android:id="@+id/i4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/t4"
        android:layout_centerInParent="true"
        android:src="@drawable/hongkong"
        android:layout_marginTop="25dp"
       />


</RelativeLayout>
</ScrollView>